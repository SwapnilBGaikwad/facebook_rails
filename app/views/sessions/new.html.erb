<title>GeekBook</title>
  <%= stylesheet_link_tag    'css/style.css' %>

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="GeekBook,Sign up Forms,Registration Forms,News latter Forms,Elements"./>

<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
</script>
<!--webfonts-->
  <%= stylesheet_link_tag   'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700,800' %>
<!--//webfonts-->
</head>
<body style="background:rgb(101, 127, 108)">
	<h1>Geek-Book</h1>
		<div class="app-cross">
			<h2>SIGN IN</h2>
			<%= form_for :session , url: sessions_path do |f| %>
                <%= f.text_field :email_id , class: "text" , value: "E-mail address" , onfocus: "this.value = '';" , onblur: "if (this.value == '') {this.value = 'E-mail address';}"  %>
                <%= f.password_field :password , value: "Password" , onfocus: "this.value = '';" , onblur: "if (this.value == '') {this.value = 'Password';}" %>
				<div class="submit"><%= f.submit :SignIn , onclick: "myFunction()" , value: "Sign in"%></div>
				
				<div class="clear"></div>
				<h3><a href="#">Forgot Password ?</a></h3>
		    <%  end  %>
				<div class="buttons">
					<%= link_to 'SignUp' , new_user_path  , class: "hvr-shutter-in-vertical" %>
				</div>
					<h4>New here ? <a href="#"> Sign Up</a></h4>
			
		</div>
	<!--start-copyright-->
